{
    "name":        "hwi/oauth-bundle",
    "type":        "symfony-bundle",
    "description": "Support for authenticating users via oauth in Symfony2.",
    "keywords":    ["security", "firewall", "oauth"],
    "homepage":    "http://github.com/hwi/HWIOAuthBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "Alexander",
            "email": "alexander@hardware.info"
        },
        {
            "name": "Geoffrey Bachelet",
            "email": "geoffrey.bachelet@gmail.com"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/hwi/HWIOAuthBundle/contributors"
        }
    ],

    "require": {
        "php":                ">=5.3.2",
        "symfony/symfony":    ">=2.0,<2.2-dev",
        "kriswallsmith/buzz": "0.6"
    },

    "require-dev": {
        "doctrine/orm": "*",
        "friendsofsymfony/user-bundle": "*",
        "symfony/twig-bundle": "*"
    },

    "suggest": {
        "symfony/doctrine-bundle": "to use Doctrine user provider",
        "friendsofsymfony/user-bundle": "to connect FOSUB with this bundle",
        "symfony/twig-bundle": "to use the Twig hwi_oauth_* functions"
    },

    "autoload": {
        "psr-0": {
            "HWI\\Bundle\\OAuthBundle": ""
        }
    },

    "target-dir": "HWI/Bundle/OAuthBundle"
}
